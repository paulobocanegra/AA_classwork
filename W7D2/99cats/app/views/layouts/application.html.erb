<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <h2>Welcome to 99 Cats, <%= current_user.user_name %></h2>
      <form action="<%=session_url%>" method = "POST">
        <input type="text"> <a href="<%= session_url(current_user.id) %>">Log out</a>
      </form>
    <% else %>
      <a href="<%= new_user_url %>">Sign up for 99 Cats</a>
      <a href="<%=new_session_url%>">Sign in to 99 Cats</a>
    <% end  %>
    <%= yield %>
  </body>
</html>
