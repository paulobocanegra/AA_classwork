
    <% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Make cat" %>
    <% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Make better cat" %>
    <% end %>

    <form action="<%= action_url %>" method="POST">
    <% if type == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>
    
    <label for="name">Name:
        <input type="text" name="cat[name]" value="<%= cat.name %>">
    </label>
    <br>
    <label for="birth_date">Birth date:
        <input type="text" name="cat[birth_date]" value="<%= cat.birth_date %>">
    </label>
    <br>
    <label for="sex">Sex:</label>
        <select id="sex" name="cat[sex]" value="<%= cat.sex %>">
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </label>
     <br>
    <label for="color">Color:</label>
        <select id="color" name="cat[color]" value="<%= cat.color %>">
            <option value="Orange">Orange</option>
            <option value="Gray">Gray</option>
            <option value="Black">Black</option>
            <option value="Tuxedo">Tuxedo</option>
            <option value="White">White</option>
            <option value="Other">Other</option>
        </select>
    </label>
    <br>

    <label for="description">Description:
        <input type="text" name="cat[description]" value="<%= cat.description %>">
    </label>
    <br>
    <input type="submit" value="<%= button_text  %>">


</form>